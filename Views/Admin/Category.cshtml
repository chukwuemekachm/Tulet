@using System.Collections.Generic 
@model IEnumerable<Tulet.Models.Entities.Category>
@{
    ViewData["Title"] = "Admin | Categories"; 
}

<div class="container">
	<h2><span class="glyphicon glyphicon-bookmark"></span> @ViewData["Title"]</h2>
	<div class="row">
    	<div class="col-md-3">
            @await Component.InvokeAsync("AdminNav")
		</div>
		<div class="col-md-6">
            <table class="table table-striped w3-striped table-responsive">
                <tr>
                    <th>No</th>
                    <th>Name</th>
                    <th><span class="glyphicon glyphicon-edit"></span></th>
                    <th><span class="glyphicon glyphicon-trash"></span></th>
                </tr>
                @{
                    if (Model != null) 
                    {
                        foreach (var item in this.Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Name</td>
                                <td><button class="btn btn-info btn-xs"><span class="	glyphicon glyphicon-edit"> Update</span></button></td>
                                <td><button class="btn btn-danger btn-xs"><span class="	glyphicon glyphicon-trash"> Delete</span></button></td>
                            </tr>
                        }
                    }
                }
            </table>
        </div>
        <div class="col-md-3">
            <form method="POST">
                @Html.AntiForgeryToken()
                <div class="form-group">
                    <label>Name</label>
                    <input name="Name" class="form-control" />
                </div>
                <button type="submit" class="btn btn-default">Add New</button>
            </form>
        </div>
    </div>