@model IEnumerable<Tulet.Models.GlobalViewModels.Admin>
@{
    ViewData["Title"] = "Global Dashboard | All Users"; 
}

<div class="container">
	<h2><span class="glyphicon glyphicon-user"></span> @ViewData["Title"]</h2>
	<div class="row">
    	<div class="col-md-3">
            @await Component.InvokeAsync("GlobalNav")
		</div>
		<div class="col-md-9">
            <div class="row">
                <table class="table table-striped w3-striped table-responsive">
                    <tr>
                        <th>User Id</th>
                        <th>Email</th>
                        <th><span class="glyphicon glyphicon-file"></span></th>
                        <th><span class="glyphicon glyphicon-trash"></span></th>
                        <th><span class="glyphicon glyphicon-user"></span></th>
                    </tr>
                    @{
                    if (Model != null) 
                    {
                        foreach (var item in this.Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td>@item.Email</td>
                                <td><a asp-controller="Admin" asp-action="AgentInfo" asp-route-id="@item.Email"><button class="btn btn-success btn-xs"><span class="glyphicon glyphicon-file"> View</span></button></a></td>
                                <td><a asp-controller="Global" asp-action="DeleteUser" asp-route-id="@item.Id"><button class="btn btn-success btn-xs"><span class="glyphicon glyphicon-trash"> Delete</span></button></a></td>
                                <td><a asp-controller="Global" asp-action="MakeAdmin" asp-route-id="@item.Id"><button class="btn btn-danger btn-xs"><span class="glyphicon glyphicon-user"> Make Admin</span></button></a></td>
                            </tr>
                        }
                    }
                }
                </table>
                
            </div>
        </div>
    </div>
</div>